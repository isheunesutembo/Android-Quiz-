<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_margin="10dp"

    tools:context=".Playing"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:elevation="4dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#606060"
        app:cardCornerRadius="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_score"
                android:text="Score:0"
                android:textSize="15sp"
                android:textColor="#fff"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_total_question"
                android:textSize="15sp"
                android:text="Question:0"
                android:textStyle="bold"
                android:layout_toRightOf="@id/text_score"
                android:layout_marginLeft="200dp"
                android:layout_alignParentRight="true"
                android:textColor="#fff"/>
            <TextView
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="#fff"
                android:id="@+id/question_text"
                android:layout_below="@id/text_score"
                android:layout_marginTop="25dp"
                android:text="Question to be displayed here \nQuestion to be displayed here"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>




    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="30dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:weightSum="1">
            <ProgressBar
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:max="5"
                android:id="@+id/progressBar"/>
            <Button

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/answerA"
                android:text="Answer A"
                android:layout_margin="8dp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@drawable/roundbutton" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/answerB"
                android:text="Answer B"
                android:layout_margin="8dp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@drawable/roundbutton" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/answerC"
                android:text="Answer C"
                android:layout_margin="8dp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@drawable/roundbutton" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/answerD"
                android:text="Answer D"
                android:layout_margin="8dp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@drawable/roundbutton" />

        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>